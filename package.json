{
  "scripts": {
    "build": "npm run build:components && npm run build:dts && npm run build:css",
    "build:components": "vite-node ./scripts/build-module.ts",
    "build:dts": "vite-node ./scripts/build-dts.ts",
    "build:css": "vite-node ./scripts/build-css.ts",
    "dev:components": "vite-node ./scripts/dev-components.ts",
    "dev:business": "vite-node ./scripts/dev-business.ts",
    "dev:work-front": "vite-node ./scripts/dev-work-front.ts",
    "postinstall": "npm run build",
    "test": "vitest",
    "test:update": "vitest --update",
    "coverage": "vitest run --coverage",
    "commit": "git-cz",
    "lint": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,less,vue}'",
    "gen-api": "node ./src/api/json-merge.js && openapi-generator-cli generate -i ./src/api/new-api-docs.json -g typescript-axios -o ./src/api/autogen --skip-validate-spec",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-angular": "^17.7.0",
    "@commitlint/config-conventional": "^17.7.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@types/less": "^3.0.3",
    "@types/node": "^18.11.5",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitejs/plugin-vue-jsx": "^2.1.1",
    "@vitest/coverage-v8": "^0.34.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.26.0",
    "eslint-plugin-vue": "^9.6.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "less": "^4.1.3",
    "lint-staged": "^14.0.1",
    "prettier": "^2.7.1",
    "rollup": "^3.2.3",
    "rollup-plugin-esbuild": "^4.10.1",
    "ts-morph": "^16.0.0",
    "typescript": "^4.8.4",
    "unplugin-vue-macros": "^0.14.0",
    "vite": "^3.1.8",
    "vite-node": "^0.24.3",
    "vitest": "^0.34.3",
    "vue": "^3.3.4"
  },
  "peerDependencies": {
    "esbuild": "^0.13.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,less,vue}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
