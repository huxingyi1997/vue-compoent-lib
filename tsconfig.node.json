{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES6",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "lib": ["ES6", "DOM"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "allowJs": true
    }
  },
  "include": [
    "env.d.ts",
    "scripts",
    "packages/work-server/src/lib.d.ts",
    "packages/work-server/src/",
    "packages/init-database/src/",
    "packages/init-database/demos/",
    "packages/mock-cdn/src/",
    "packages/mock-cdn/demos/"
  ],
  "exclude": ["node_modules"]
}
